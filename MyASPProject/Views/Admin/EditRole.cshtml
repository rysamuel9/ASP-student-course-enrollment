@model MyASPProject.ViewModels.EditRoleViewModel

@{
    ViewData["Title"] = "EditRole";
}

<h1 class="mt-4">Edit Role</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item active">Edit Role</li>
</ol>

<hr />

<div class="card mb-4">
    <div class="card-body">
        <div class="col-md-6">
            <form asp-action="EditRole">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3 mt-3">
                    <label asp-for="Id" class="form-label"></label>
                    <input asp-for="Id" class="form-control" readonly />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="mb-3 mt-3">
                    <label asp-for="RoleName" class="form-label"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>

            <br />
            <a class="btn btn-primary mb-3" style="width:auto" asp-controller="Admin" asp-action="AddUserToRole">Add User to Role</a>

            @if (Model.Users.Any())
            {
                <table class="table ttable-striped">
                    <tr>
                        <th>Username</th>
                        <th>&nbsp;</th>
                    </tr>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user</td>
                            <td>
                                <a class="btn btn-danger btn-sm" asp-action="DeleteInRole" asp-route-id="@user" asp-route-role="@Model.RoleName">
                                    <i class="fa-solid fa-right-from-bracket"></i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            }
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
